{{ 'sticky-product-modal.js' | asset_url | script_tag }}

<sticky-product-modal
data-handle="{{ product.handle }}">
</sticky-product-modal>

<style>
    /* Modal Styles */
    .modal {
        display: none;
        position: fixed;
        z-index: 99999;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.7);
        overflow: auto;
    }

    .modal-content {
        background-color: #fff;
        margin: 10% auto;
        padding: 20px;
        border: 1px solid #888;
        width: 80%;
        max-width: 600px;
        position: relative;
        height: 70vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .product-info {
        display: flex;
        gap: 20px;
    }

    .product-info img{
        height: 200px;
    }

    .close {
        position: absolute;
        top: 0;
        right: 0;
        padding: 10px;
        cursor: pointer;
    }

    /* Hide steps by default */
    .step {
        display: none;
    }

    /* Show the first step by default */
    #step1 {
        display: block;
    }

    /* Timeline Styles */
.timeline {
    display: flex;
    justify-content: space-between;
    margin-bottom: 20px;
    position: absolute;
    width: 80%;
    bottom: 10px;
}

.timeline label {
    text-align: center;
}
.timeline label input {
    display: none;
}

.option-selector {
    padding: 10px 15px;
    border-radius: 50px;
}

input#quantity {
    padding: 10px 15px;
    border-radius: 50px;
    width: 90px;
    border: 1px solid #ededed;
    font-family: 'BlackMango-Regular';
}

.timeline-step {
    flex: 1;
    color: #9d9d9d;
    border-radius: 5px;
    cursor: pointer;
    text-transform: uppercase;
    font: .8rem;
}

.timeline-step.active {
    font-weight: bold;
    text-decoration: underline;
    color: #000;
}

.btn.add_to_cart {
    background: #b2a89d;
    color: #fff;
}
.btn {
    margin-bottom: 1rem;
    border: none;
    font-size: 16px;
    padding: 10px 15px;
    border-radius: 50px;
    cursor: pointer;
    font-family: BlackMango-Regular;
}
.step .btn {
    margin-left: 20px;
}
</style>